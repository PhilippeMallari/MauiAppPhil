@page "/Register"

<h3>Register</h3>
@* Change into editform from form*@
<EditForm Model="@new_employee">
    <div class="form-group">
        <label for="exampleInputName">Name</label>
        <input type="name" class="form-control" id="exampleInputName" placeholder="Enter name"></div>
    <div class="form-group">
        <label for="exampleInputEmail">Email</label>
        <input type="email" class="form-control" id="exampleInputEmail" aria-describedby="emailHelp" placeholder="Email">
    </div>

    <div>
        <label for="country">Country: @new_employee.Country </label>
        <br />
        <div class="dropdown">
            <select @bind="new_employee.Country" class="form-select" aria-label="Default select example">
               @* 
                <option value="CA">Canada</option>
                <option value="US">USA</option>
                <option value="PH">Philippines</option>
               *@

                @foreach(var item in countryNames)
                {
                    <option value="@item.CountryID">@item.CountryName</option>
                }
            </select>
        </div>
    </div>

    <button type="submit" class="btn btn-secondary">Submit</button>
</EditForm>

